<header>
  <a href="/app/quiz/{{objectid sid}}?sessid={{sessid}}">‚Üê Quiz</a>
  <h1>Editing question</h1>
  <h2>{{question.title}}</h2>
</header>
<main>
  <form action="/app/quiz/{{objectid sid}}/question/edit/{{objectid question.iD}}" method="POST"
    enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="sessid" value="{{sessid}}">
    <label>Question title <input type="text" name="title" value="{{question.title}}"></label>
    <fieldset data-answer-inputs>
      <legend>Answers</legend>
      {{#each question.answers}}
      {{> partials/saved-answer}}
      {{/each}}
      <label>
        Answer {{addOne (len question.answers)}}:
        <input autofocus type="text" name="answer">
      </label>
      <button type="submit" name="submit" value="add" class="large" data-add-answer>Add answer</button>
    </fieldset>
    <button type="submit" name="submit" value="save" class="large">Save changes</button>
  </form>
</main>
<template style="display: none;" data-answer-template>
  {{> partials/new-answer}}
</template>
<script src="/static/scripts/quiz-question.js"></script>