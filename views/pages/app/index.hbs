<h1>{{user.username}}'s Goldhoot</h1>

<a href="/app/quiz/create?sessid={{sessid}}">Create quiz</a>
<form action="/app/join" method="GET">
  <input type="hidden" name="sessid" value="{{sessid}}">
  <label>Join quiz</label>
  <input type="text" name="session">
  <button>Join</button>
  {{#if errors.session}}
  <p>{{errors.session}}</p>
  {{/if}}
</form>

<section>
  <h2>Previously joined quizzes</h2>
  <ul>
    {{#each joinedSessions}}
    <li>
      <a href="/app/quiz/{{objectid this.iD}}/results?sessid={{sessid}}">{{this.name}}</a>
    </li>
    {{/each}}
  </ul>
</section>

<section>
  <h2>Your poll quizzes</h2>
  <h3>Ongoing</h3>
  <ul>
    {{#each ongoingSessions}}
    <li>
      <a href="/app/quiz/{{objectid this.iD}}?sessid={{sessid}}">{{this.name}}</a>
    </li>
    {{/each}}
  </ul>
  <h3>Drafts</h3>
  <ul>
    {{#each draftSessions}}
    <li>
      <a href="/app/quiz/{{objectid this.iD}}?sessid={{sessid}}">{{this.name}}</a>
    </li>
    {{/each}}
  </ul>
  <h3>Finished</h3>
  <ul>
    {{#each finishedSessions}}
    <li>
      <a href="/app/quiz/{{objectid this.iD}}?sessid={{sessid}}">{{this.name}}</a>
    </li>
    {{/each}}
  </ul>
</section>